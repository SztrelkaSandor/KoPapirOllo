<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/gep_image_hp1"
            android:src="@drawable/heart2"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/gep_image_hp2"
            android:src="@drawable/heart2"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/gep_image_hp3"
            android:src="@drawable/heart2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gép"
            android:textSize="30sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Játékos"
            android:textSize="30sp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/image_hp1"
            android:src="@drawable/heart2"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/image_hp2"
            android:src="@drawable/heart2"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/image_hp3"
            android:src="@drawable/heart2"
            />

    </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/dontetlen"
            android:layout_below="@id/hp"
            android:gravity="center"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dontetlen"
            android:text="Döntetlenek száma: "
            android:textSize="30sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/en_valasztasom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/dontetlen"
        >

        <ImageView
            android:id="@+id/A_te_valasztasod_kep"
            android:layout_width="150dp"
            android:layout_height="150dp"

            android:src="@drawable/rock"

            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/en_valasztasom"
    android:id="@+id/szoveg1"
    android:gravity="center">
        <TextView
            android:id="@+id/A_te_valasztasod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:text="A te választásod"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gep_valsztasa"
        android:layout_below="@id/szoveg1"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/A_gep_valasztasa_kep"
            android:src="@drawable/rock"

            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/gep_valsztasa"
    android:id="@+id/szoveg2"
    android:gravity="center"
    >
        <TextView
            android:id="@+id/A_gep_valasztasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A gép választása"
            android:textSize="30sp"
            />


    </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/szoveg2"
           android:gravity="center_horizontal"
           >
    <ImageButton
        android:layout_width="80sp"
        android:layout_height="80sp"

        android:id="@+id/ko"


        android:src="@drawable/rock"
        />
    <ImageButton
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:id="@+id/papir"



        android:src="@drawable/paper"
        />
    <ImageButton
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:id="@+id/ollo"



        android:src="@drawable/scissors"
        />
   </LinearLayout>
</RelativeLayout>